<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inner_bg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to choose?"
        android:textColor="#ffffff"
        android:id="@+id/text_choice"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="65dp"
        android:textSize="26dp"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/mix_ingredients_btn"
        android:background="@drawable/button_mix_ingredients"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/text_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/text_or"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/mix_ingredients_btn"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/look_for_recipes_btn"
        android:background="@drawable/button_look_for_recipes"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/text_or"
        android:layout_alignLeft="@+id/mix_ingredients_btn"
        android:layout_alignStart="@+id/mix_ingredients_btn"
        android:layout_marginTop="60dp" />


</RelativeLayout>